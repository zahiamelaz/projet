<% if(locals.user.success){ %>
<%- include('./partials/headerf'); %>
<div class="container">       
    <div class="card mb-3">      
        <div class="text-center ">
            <img name="attachement" src="/img/uploads/<%= user.success.attachement %>" class="round mt-5" alt="image">
        </div>            
        <div class="userprofile">
            <h4 class="titre ">Mes informations</h4>
            <hr>
            <h4 class="titre ">username :<%= user.success.username %></h4>
            <h4 class="titre ">Email :<%= user.success.email %></h4>
            <p class="bio"><%= user.success.bio %></p>                
        </div>
        <div class="row">
            <div class="col-sm-4">
                <form method="POST" action="/deleteuser">
                    <button class="btn-outline-danger" onClick= 'return confirm("Voulez-vous vraiment supprimer cet utilisateur ?")'><i class="fa-regular fa-trash-can"></i></button>
                </form>
                <form method="POST" action="/profile">
                    <p>
                        <a class="btn btn-outline-success btn-sm" data-bs-toggle="collapse" href="#collapseExample" role="button" aria-expanded="false"  id="changeinfo"aria-controls="collapseExample">
                            <i class="fa-solid fa-pen-to-square "></i>
                        </a>
                    </p>
                    <div class="collapse" id="collapseExample">
                        <div class="card card-body">
                            <input type="text" class="form-control" name="username"  placeholder="username"  id="editusername">
                            <input type="text" class="form-control" name="bio"  placeholder="Ecrire ici"  id="editbio">
                            <input type="file" name="attachement" class="form-control" id="editattachement"><br>
                        </div>
                        <button type="submit" class="btn btn-primary" id="change">Change</button>
                    </div>
                </form>
            </div>
            <div class="col-sm-4">
                <form action="/" method="post" onctype="multipart/form-data">
                    <p>
                        <a class="btn btn-primary btn-sm" data-bs-toggle="collapse" href="#collapseExample2" role="button" aria-expanded="false"  id="changeinfo"aria-controls="collapseExample2">
                            Ajouter un post</a>
                    </p>
                    <div class="collapse" id="collapseExample2">
                        <input type="text"  name="content" class="form-control" placeholder="Content"><br>
                        <input type="file" name="attachement" class="form-control"><br>
                        <input type="submit" value="Enregistrer" class="btn btn-primary">
                    </div>                    
                </form> 
            </div>
            <div class="col-sm-2">
                <p>
                    <a class="btn btn-primary btn-sm"  href="/profilepost" >Voir mes posts</a>
                </p>
            </div>            
        </div>            
    </div>  
</div>
<%- include('./partials/footer'); %>
<% } %>